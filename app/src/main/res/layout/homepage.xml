<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Screens.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ToolBarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/image_supply"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:srcCompat="@drawable/avatar"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/image_request"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_supply"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:srcCompat="@drawable/avatar"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/image_report"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:srcCompat="@drawable/avatar"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/image_account"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/image_report"
        app:srcCompat="@drawable/avatar"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/txtSupply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Supplies"
        app:layout_constraintEnd_toEndOf="@+id/image_supply"
        app:layout_constraintStart_toStartOf="@+id/image_supply"
        app:layout_constraintTop_toBottomOf="@+id/image_supply" />

    <TextView
        android:id="@+id/txRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Requests"
        app:layout_constraintEnd_toEndOf="@+id/image_request"
        app:layout_constraintStart_toStartOf="@+id/image_request"
        app:layout_constraintTop_toBottomOf="@+id/image_request" />

    <TextView
        android:id="@+id/txtReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reports"
        app:layout_constraintEnd_toEndOf="@+id/image_report"
        app:layout_constraintStart_toStartOf="@+id/image_report"
        app:layout_constraintTop_toBottomOf="@+id/image_report" />

    <TextView
        android:id="@+id/txtAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        app:layout_constraintEnd_toEndOf="@+id/image_account"
        app:layout_constraintStart_toStartOf="@+id/image_account"
        app:layout_constraintTop_toBottomOf="@+id/image_account" />
</androidx.constraintlayout.widget.ConstraintLayout>